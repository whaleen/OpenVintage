<% if signed_in? %>
  <div class="row">
    <aside class="large-6 columns">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/bottle_form' %>
      </section>
    </aside>
    <div class="large-6 columns">
      <h3>Bottle Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Open Vintage</h1>

    <h2>
      This is the home page for the
      <a href="#">Open Vintage</a>
      smoke test application.
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "small radius button secondary" %>
  </div>

  <%= link_to image_tag("logo.png", alt: "Open Vintage"), '#' %>
<% end %> 
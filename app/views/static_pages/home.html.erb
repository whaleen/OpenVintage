<% if signed_in? %>
  <div class="row">
    <aside class="large-6 columns">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
	<hr />
	
<section>
	<a href="#" data-reveal-id="addBottle" class="small success button">Add Bottle</a>
</section>
	
     
    </aside>
    <div class="large-6 columns">
      <h3>Bottle Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  



	<div id="addBottle" class="reveal-modal">
	  <h3>Add Bottle</h3>
      <%= render 'shared/bottle_form' %>
	    <a class="close-reveal-modal">&#215;</a>
	</div>




<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Open Vintage</h1>

    <h2>
      This is the home page for the
      <a href="#">Open Vintage</a>
      smoke test application.
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "small radius button secondary" %>
  </div>

  <%= link_to image_tag("logo.png", alt: "Open Vintage"), '#' %>
<% end %> 
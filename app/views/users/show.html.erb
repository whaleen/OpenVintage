<% provide(:title, @user.name) %>
<div class="row">
  <aside class="large-4 columns">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="large-8 columns">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.bottles.any? %>
      <h3>Bottles (<%= @user.bottles.count %>)</h3>
      <ol class="bottles">
        <%= render @bottles %>
      </ol>
      <%= will_paginate @bottles %>
    <% end %>
  </div>
</div>
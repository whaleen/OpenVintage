<% provide(:title, @user.name) %>

<div class="row">
  <aside class="large-4 columns">
  <h1>
  <%= fa_icon "reorder 4x muted", class: "pull-left" %> <%= @user.name %>
  </h1>

    <%= gravatar_for @user %>
	<%= current_user.handle %>
	<hr />
    <section>

        <%= @user.bio %>
    </section>
<hr />
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="large-8 columns">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.bottles.any? %>
      <h3>Bottles (<%= @user.bottles.count %>)</h3>
      <ul class="small-block-grid-2 large-block-grid-3">
        <%= render @bottles %>
      </ul>
      <%= will_paginate @bottles %>
    <% end %>
  </div>
</div>
<div class="panel">
<h3>Add Bottle</h3>
<%= form_for(@bottle) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
	<%= f.text_field :title, placeholder: "Title" %>
	<%= f.text_field :vintage, placeholder: "Vintage" %>
	<%= f.text_field :producer, placeholder: "Producer" %>
    <%= f.text_area :content, placeholder: "Tasting notes..." %>
  </div>
  <%= f.submit "Add", class: "small radius button success" %>
<% end %>

</div>